{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "none",
  "jsxBracketSameLine": true,
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "importOrder": [
    "^react",
    "^@/lib/hooks",
    "^@/lib/types",
    "^@/lib/components",
    "@/modules",
    "^[./]"
  ],
  "importOrderSeparation": true
}
